<div class="card_detail_page">
  <div class="detail_container">
    <div class="card_contents">
      <div class="card_content_title">
        <div>タイトル</div>
        <div><%= @card.title %></div>
      </div>
      <div class="card_content_memo">
        <div>メモ</div>
        <div><%= @card.memo %></div>
      </div>
      <div class="card_content_list"></div>
        <div><%= @card.list.title%>
      </div>
      <div class="cardContents_btnArea">
        <%= link_to '編集する', edit_list_card_path(@card.list, @card), class: "edit_btn" %>
        <%= link_to '削除をする', list_card_path(@card.list, @card), class: "text-danger delete_btn", method: :delete, data: { confirm: "このカードを削除しますか？" } %>
  </div>
</div>
