<div class="card_edit_pae">
  <div class='card_edit_container'>
      <%= form_with model: @card, url:{ action: :update }, html: { class: 'card_edit_form' }, local: true do |f| %>
      <% if @card.errors.any? %>
        <p class="text_edit_danger">タイトルは1～255文字以内で入力してください</p>
      <% end %>
      <div class="card_editform_title">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control", placeholder: "カード名" %>
      </div>
      <div class="card_edit_form_memo">
        <%= f.label :memo %>
        <%= f.text_area :memo, class: "form-control", placeholder: "詳細" %>
      </div>
      <%= f.submit "更新する", class: "submitBtn" %>
    <% end %>
  </div>
</div>