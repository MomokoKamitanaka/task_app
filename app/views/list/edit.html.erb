<div class="list_edit_page">
  <div class="list_edit_container">
  <%= form_with model: @list, url: { action: :update }, html: { class: 'list_edit_form' }, local: true do |f| %>
  <% if @list.errors.any? %>
    <p class="text_edit_danger">１文字以上２５文字以内で入力してください</p>
  <% end %>
  <%= f.label :title %>
  <%= f.text_field :title, autofocus: true, class: "form-control list_name", placeholder: "リスト名" %>
  <div class="text-center"></div><%= f.submit "編集する", class: "submitBtn" %></div>
  <% end %>
  </div>
</div>