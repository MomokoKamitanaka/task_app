
<div class="container-fluid">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-10">
      <div class="list_new_page todo_input">
      <div class="list_new_container">
      <%= form_with model: @list, url: { action: :create }, class: "list_new_form", local: true do |f| %>
      <% if @list.errors.any? %>
        <p class="text_newlist_danger">タイトルはは25文字以下で入力してください</p>
      <% end %>
      <%= f.label :title %>
      <%= f.text_field :title, autofocus: true, class: "form-control list_name", placeholder: "リスト名" %>
      <p class="text-center"><%= f.submit "作成する", class: "submitBtn" %></p>
      <% end %>
      </div>
      </div>
    </div>
    <div class="col-1"></div>
  </div>
</div>