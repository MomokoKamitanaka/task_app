
<div class="container-fluid">
  <div class="row">
    <div class="col-1">
    </div>
    <div class="col-10">
      <% @lists.each do |list| %>
      <div class="todo_list">
        <div class="list">
          <div class="list_header">
            <h2 class="list_header_title"><%= list.title %></h2>
            <div class="list_header_action">
              <%= link_to(content_tag(:i, '', class: 'fas fa-pen'), edit_list_path(list)) %>   
              <%= link_to content_tag(:i, '', class: 'fas fa-trash'), list, method: :delete, data: { confirm: "#{list.title}を削除します？" } %>
            </div>          
          </div>
          <div class="cardWrapper">
            <% list.cards.each do |card| %>                    
              <%= link_to list_card_path(list, card), class:"card_detail_link" do %>
                <div class="card">
                  <h3 class="card_title"><%= card.title %></h3>
                </div>
              <% end%>
            <% end %>
          </div>
          <div class="card_add">
            <i class="far fa-plus-square"></i>
            <%= link_to "さらにカードを追加", new_list_card_path(list), class: "addCard_link" %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <div class="col-1">
    </div>
  </div>
</div>

